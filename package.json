{
  "name": "hermes-api",
  "version": "1.0.50",
  "module": "src/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify --target bun --outfile dist/hermes ./src/index.ts",
    "format": "prettier --write \"./src/**/*.+(ts|json)\"",
    "lint": "eslint --fix --no-error-on-unmatched-pattern ./src/**/*.ts",
    "prepare": "husky",
    "test": "vitest --run --passWithNoTests",
    "db:migration-generate": "bunx drizzle-kit generate --dialect sqlite --schema ./src/db/models",
    "db:migrate": "bun run ./src/db/utils/migrate.ts",
    "db:seed": "bun run ./src/db/utils/seed.ts"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.7",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/swagger": "^1.2.0",
    "drizzle-orm": "^0.38.3",
    "elysia": "latest",
    "elysia-rate-limit": "^4.1.0",
    "mysql2": "^3.12.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "bun-types": "latest",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.30.1"
  }
}
